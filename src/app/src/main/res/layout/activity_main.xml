<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/webview_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/button_menu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#024FC9"
        android:elevation="6dp"
        android:padding="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:cornerRadius="25dp"
        app:icon="@drawable/menu_icon"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        app:iconTint="#FFFFFF" />

    <LinearLayout
        android:id="@+id/panel_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_menu"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/botonMainIrEditar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#024FC9"
            android:onClick="botonAEditar"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:cornerRadius="25dp"
            app:icon="@drawable/user_icon"
            app:iconSize="50dp" />

        <Button
            android:id="@+id/botonMainIrParametros"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#024FC9"
            android:onClick="botonIrParametrosSensor"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:cornerRadius="25dp"            app:icon="@drawable/options_icon"
            app:iconSize="50dp" />

        <Button
            android:id="@+id/botonMainIrInformacion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#024FC9"
            android:onClick="botonIrATorty"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:cornerRadius="25dp"            app:icon="@drawable/info_icon"
            app:iconSize="50dp" />

    </LinearLayout>

</RelativeLayout>

